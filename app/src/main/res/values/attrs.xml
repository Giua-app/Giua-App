<resources>
    <declare-styleable name="ObscureLayoutView">
        <attr name="hasCancelText" format="boolean" />
        <attr name="cancelText" format="string" />
    </declare-styleable>

    <style name="GiuaAppIntroDefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/appintro_desc_color</item>
        <item name="android:padding">@dimen/appintro_desc_padding</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">@dimen/appintro_text_granularity_size</item>
    </style>
    <style name="GiuaAppIntroDefaultHeading" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/appintro_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/appintro_head_padding</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">@dimen/appintro_text_granularity_size</item>
    </style>
</resources>