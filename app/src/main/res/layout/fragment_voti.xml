<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:androd="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_light"
    android:id="@+id/vote_fragment_constraint_layout"
    android:orientation="vertical"
    tools:context=".ui.voti.VotiFragment">

    <ScrollView
        android:id="@+id/vote_fragment_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/vote_fragment_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Qui verranno visualizzati i dettagli del voto cliccatao-->
    <LinearLayout
        android:id="@+id/vote_fragment_detail_vote_layout"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="@+id/vote_fragment_scroll_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>