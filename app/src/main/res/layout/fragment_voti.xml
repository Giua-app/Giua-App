<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androd="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vote_fragment_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    tools:context=".ui.voti.VotiFragment">

    <!-- Qui verranno visualizzati i dettagli del voto cliccato-->

    <ProgressBar
        android:id="@+id/vote_loading_page_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="67dp"
        android:layout_height="67dp"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent"
        androd:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/vote_fragment_no_elements_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varelaroundregular"
        android:text="@string/no_elements"
        android:textSize="16sp"
        android:visibility="gone"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintHorizontal_bias="0.495"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent"
        androd:layout_constraintVertical_bias="0.441" />

    <ScrollView
        android:id="@+id/vote_fragment_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintHorizontal_bias="0.0"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent"
        androd:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/vote_fragment_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" />

    </ScrollView>

    <ImageButton
        android:id="@+id/obscure_layout_image_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/obscure_style"
        android:visibility="gone"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/attachment_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/general_view_style"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        androd:layout_constraintBottom_toBottomOf="parent"
        androd:layout_constraintEnd_toEndOf="parent"
        androd:layout_constraintHorizontal_bias="0.0"
        androd:layout_constraintStart_toStartOf="parent"
        androd:layout_constraintTop_toTopOf="parent"
        androd:layout_constraintVertical_bias="0.422">

        <TextView
            android:id="@+id/detail_vote_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="@string/detail_vote_date"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/detail_vote_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="@string/detail_vote_type"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/detail_vote_arguments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="@string/detail_vote_arguments"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/detail_vote_judge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="@string/detail_vote_judge"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>