<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/authorizations_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/authorizations_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/authorizations_entry"
                android:textSize="18dp"
                android:padding="16dp"
                android:background="@drawable/corner_radius_10dp"
                android:backgroundTint="@color/main_color_lighter"
                android:fontFamily="@font/varelaroundregular" />

            <TextView
                android:id="@+id/authorizations_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/authorizations_exit"
                android:layout_marginTop="56dp"
                android:textSize="18dp"
                android:padding="16dp"
                android:background="@drawable/corner_radius_10dp"
                android:backgroundTint="@color/main_color_lighter"
                android:fontFamily="@font/varelaroundregular" />
        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>