<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10dp"
    android:backgroundTint="@color/general_view_color"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/view_home_main_layout">

    <TextView
        android:id="@+id/view_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varelaroundregular"
        android:textColor="@color/middle_vote_no_night"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/view_home_mean_chart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/view_home_txt_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minWidth="60dp"
                android:fontFamily="@font/varelaroundregular"
                android:background="@drawable/corner_radius_5dp"
                android:backgroundTint="@color/loading_content"
                android:padding="5dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/varelaroundregular"
                android:text="Media totale" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>