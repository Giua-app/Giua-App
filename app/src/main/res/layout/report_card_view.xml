<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10dp"
    android:backgroundTint="@color/general_view_color"
    android:padding="10dp">

    <TextView
        android:id="@+id/report_card_view_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/varelaroundregular"
        android:text="Materia"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/report_card_view_vote"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report_card_view_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@drawable/corner_radius_10dp"
        android:fontFamily="@font/varelaroundregular"
        android:padding="10dp"
        android:text="Voto"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/report_card_view_subject"
        app:layout_constraintEnd_toStartOf="@+id/report_card_view_absent_time"
        app:layout_constraintTop_toTopOf="@+id/report_card_view_subject"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/report_card_view_absent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/varelaroundregular"
        android:text="Tempo di assenza"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/report_card_view_vote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_card_view_vote" />
</androidx.constraintlayout.widget.ConstraintLayout>