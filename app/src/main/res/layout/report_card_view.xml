<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10dp"
    android:backgroundTint="@color/general_view_color"
    android:padding="8dp">

    <TextView
        android:id="@+id/report_card_view_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varelaroundregular"
        android:text="Materia"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/general_view_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_card_view_subject">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voto"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:fontFamily="@font/varelaroundregular"
            android:layout_gravity="start|top" />

        <TextView
            android:id="@+id/report_card_view_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/corner_radius_10dp"
            android:fontFamily="@font/varelaroundregular"
            android:minWidth="30dp"
            android:padding="5dp"
            android:text="Voto"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ore di assenza"
            android:layout_gravity="end|top"
            android:layout_marginEnd="8dp"
            android:textSize="15sp"
            android:fontFamily="@font/varelaroundregular" />

        <TextView
            android:id="@+id/report_card_view_absent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:fontFamily="@font/varelaroundregular"
            android:minWidth="30dp"
            android:padding="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:text="Tempo di assenza"
            android:textAlignment="center"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>