<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.agenda.AgendaFragment">

    <TextView
        android:id="@+id/agenda_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varelaroundregular"
        android:text="Aprile 1999"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ImageView
        android:id="@+id/agenda_month_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="30dp"
        android:background="@drawable/corner_radius_10dp"
        android:backgroundTint="@color/general_view_color"
        android:src="@drawable/ic_baseline_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/agenda_month_text"
        app:layout_constraintStart_toEndOf="@+id/agenda_month_text"
        app:layout_constraintTop_toTopOf="@+id/agenda_month_text"
        android:contentDescription="Prossimo mese" />

    <ImageView
        android:id="@+id/agenda_month_prev_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="30dp"
        android:background="@drawable/corner_radius_10dp"
        android:backgroundTint="@color/general_view_color"
        android:src="@drawable/ic_baseline_arrow_left_24"
        app:layout_constraintBottom_toBottomOf="@+id/agenda_month_text"
        app:layout_constraintEnd_toStartOf="@+id/agenda_month_text"
        app:layout_constraintTop_toTopOf="@+id/agenda_month_text"
        android:contentDescription="Precedente mese" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/agenda_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agenda_month_text">

        <ScrollView
            android:id="@+id/agenda_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/agenda_views_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            </LinearLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/agenda_progress_bar_details"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <com.giua.app.ui.ObscureLayoutView
        android:id="@+id/agenda_obscure_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cancelText="Indietro"
        app:hasCancelText="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/agenda_object_visualizer_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/corner_radius_10dp"
        android:backgroundTint="@color/general_view_color"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419">

        <TextView
            android:id="@+id/agenda_visualizer_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="Tipo"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agenda_visualizer_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varelaroundregular"
            android:text="Materia"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agenda_visualizer_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="Docente"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/agenda_visualizer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/varelaroundregular"
            android:maxHeight="110dp"
            android:text=""
            android:textSize="16sp" />

        <TextView
            android:id="@+id/agenda_visualizer_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/varelaroundregular"
            android:text="Data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/agenda_visualizer_prev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/corner_radius_10dp"
                android:backgroundTint="@color/main_color_lighter"
                android:contentDescription="Precedente oggetto"
                android:src="@drawable/ic_baseline_arrow_left_24" />

            <ImageView
                android:id="@+id/agenda_visualizer_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/corner_radius_10dp"
                android:backgroundTint="@color/main_color_lighter"
                android:contentDescription="Prossimo oggetto"
                android:src="@drawable/ic_baseline_arrow_right_24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/agenda_no_elements_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varelaroundregular"
        android:text="@string/no_elements"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />
</androidx.constraintlayout.widget.ConstraintLayout>