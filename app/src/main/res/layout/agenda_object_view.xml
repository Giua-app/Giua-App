<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10dp"
    android:backgroundTint="@color/placeholder"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agenda_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="Compito"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agenda_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="Tempo"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:textColor="@color/main_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agenda_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaroundregular"
            android:text="21-03-2021"
            android:layout_gravity="end"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>