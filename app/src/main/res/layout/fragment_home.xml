<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/general_view_color"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andamento"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/middle_vote"
            android:fontFamily="@font/varelaroundregular" />

        <TextView
            android:id="@+id/home_txt_mean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="22sp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="@font/varelaroundregular"
            android:layout_gravity="end|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media totale"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/varelaroundregular"
            android:layout_gravity="end|center_vertical" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/home_mean_chart"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="150dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>