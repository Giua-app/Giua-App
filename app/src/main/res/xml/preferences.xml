<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Generale"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:key="notification"
            app:title="Abilita le notifiche"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="introScreen"
            app:iconSpaceReserved="false"
            app:title="Rivedi l'intro" />

        <Preference
            app:key="aboutScreen"
            app:title="Riguardo l'app"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            app:key="debugMode"
            app:title="ModalitÃ  di debug (solo utenti esperti)"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Personalizzazione"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme"
            app:title="Scegli un tema"
            app:negativeButtonText="Annulla"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:allowDividerAbove="true"
        app:iconSpaceReserved="false"
        app:isPreferenceVisible="false"
        app:key="debugCategory"
        app:title="Debug">

        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="siteUrl"
            app:negativeButtonText="Annulla"
            app:positiveButtonText="Imposta"
            app:title="Imposta l'url del sito" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="crashScreen"
            app:title="Fai esplodere il mondo" />
        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSpaceReserved="false"
            app:key="viewLog"
            app:title="Mostra logcat" />
    </PreferenceCategory>

</PreferenceScreen>