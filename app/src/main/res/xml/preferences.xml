<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Personalizzazione"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme"
            app:title="Scegli un tema"
            app:iconSpaceReserved="false"
            app:negativeButtonText="Annulla" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Debug"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="true">

        <EditTextPreference
            app:key="siteUrl"
            app:negativeButtonText="Annulla"
            app:positiveButtonText="Imposta"
            app:title="Imposta l'url del sito"
            app:iconSpaceReserved="false" />
        <Preference
            app:key="crashScreen"
            app:title="Fai esplodere il mondo"
            app:iconSpaceReserved="false" />
        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSpaceReserved="false"
            app:key="introScreen"
            app:title="Riguarda l'intro" />
        <Preference
            app:key="aboutScreen"
            app:title="About"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>